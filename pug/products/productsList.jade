                            -var list = ["Rượu Vang Pháp (44)", "Rượu Vang Úc (26)", "Rượu Vang Mỹ (20)", "Rượu Vang Chile (21)", "Rượu Vang Philip (20)", "Rượu Vang Nam Phi (23)", "Rượu Vang Ý (26)" ]
                            each item in list
                                li
                                    a(href="#")= item
                    .side_bar__item
                        h2.title__arrow SO SÁNH SẢN PHẨM
                        p Bạn chưa có sản phẩm nào để so sánh
                    .side_bar__item
                        h2.title__arrow TAG SẢN PHẨM
                        div
                            -var listbtn = ["Đồng hồ", "Túi", "Phụ kiện", "Giày", "Sandal", "Áo sơ mi", "Nước hoa", "Trẻ em", "Thời trang nữ"]
                            each itembtn in listbtn
                                button.btn.btn__list(type='button' title=`${itembtn}`)= itembtn
                    .side_bar__item
                        img(src="./images/ads.png", alt="ads")

                section.content
                    .sort_bar
                        .sort_bar__view
                            a(href="products.html")
                                i.fas.fa-th
                            a(href="#")
                                i.fas.fa-th-list
                        nav.sort_bar__pagination
                            ul
                                li
                                    a(href="#")
                                        i.fas.fa-caret-left
                                -var list = [1,2,3,4,5]
                                each item in list
                                    li
                                        a(href="#")= item
                                li
                                    a(href="#")
                                        i.fas.fa-caret-right

                    .product
                        +itemProduct("1", "RƯỢU VANG ĐÀ LẠT", "300.000 đ", "420.000 đ")
                        +itemProduct("2", "RƯỢU VANG ĐÀ LẠT", "300.000 đ", "420.000 đ")
                        +itemProduct("3", "RƯỢU VANG ĐÀ LẠT", "300.000 đ", "420.000 đ")
                        +itemProduct("4", "RƯỢU VANG ĐÀ LẠT", "300.000 đ", "420.000 đ")

        footer
            include ../footer/_footer.jade